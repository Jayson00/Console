<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="当前时间"
            android:textAlignment="center"
            android:id="@+id/tv_show_time"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_below="@id/tv_show_time"
            android:id="@+id/rl_right"
            android:layout_marginTop="4dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/right_content"
                android:layout_marginRight="40dp"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@mipmap/ic_chat_video"
                    android:id="@+id/ll_right_video"
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:layout_height="140dp">
                    <VideoView
                        android:clickable="false"
                        android:id="@+id/vv_right_chat_video_start"
                        android:src="@mipmap/ic_chat_play"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@mipmap/test_girl"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>